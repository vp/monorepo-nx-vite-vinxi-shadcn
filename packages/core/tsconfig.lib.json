{
  "extends": "../typescript-config/tsconfig.lib.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./out-tsc",
    "tsBuildInfoFile": "./out-tsc/tsconfig.lib.tsbuildinfo",
    "paths": {
      "@workspace/core/*": [
        "./src/*"
      ]
    },
  },
  "exclude": [
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
