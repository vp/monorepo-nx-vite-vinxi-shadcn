{
  "extends": "../typescript-config/tsconfig.lib-react.json",
  "include": [
    "src/**/*.ts"
  ],
  "paths": {
    "@workspace/dropzone-supabase/*": [
      "./src/*"
    ]
  },
  "references": [],
  "compilerOptions": {
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./out-tsc",
    "tsBuildInfoFile": "./out-tsc/tsconfig.lib.tsbuildinfo"
  },
  "exclude": [
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
